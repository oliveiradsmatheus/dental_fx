<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox prefHeight="480.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="matheus.bcc.dentalfx.UsuarioFormController">
    <children>
        <VBox VBox.vgrow="ALWAYS">
            <children>
                <Label text="ID">
                    <VBox.margin>
                        <Insets top="8.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="tf_id" editable="false" />

                <Label text="Nome de Usuário">
                    <VBox.margin>
                        <Insets top="8.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="tf_nome" />

                <Label text="Nível de Acesso">
                    <VBox.margin>
                        <Insets top="8.0" />
                    </VBox.margin>
                </Label>
                <ComboBox fx:id="cb_nivel" maxWidth="Infinity" />

                <VBox fx:id="vb_dentista" managed="false" visible="false">
                    <children>
                        <Label text="Vincular ao Dentista">
                            <VBox.margin>
                                <Insets top="8.0" />
                            </VBox.margin>
                        </Label>
                        <ComboBox fx:id="cb_dentista" maxWidth="Infinity" />
                    </children>
                </VBox>

                <Label text="Senha">
                    <VBox.margin>
                        <Insets top="8.0" />
                    </VBox.margin>
                </Label>
                <PasswordField fx:id="pf_senha" maxWidth="Infinity" />

            </children>
            <VBox.margin>
                <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
            </VBox.margin>
        </VBox>

        <HBox alignment="CENTER" maxHeight="106.0" prefHeight="86.0" prefWidth="768.0" spacing="48.0">
            <children>
                <Button mnemonicParsing="false" onAction="#onConfirmar" prefHeight="33.0" prefWidth="132.0" text="Confirmar" />
                <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onCancelar" prefHeight="33.0" prefWidth="132.0" text="Cancelar" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets left="12.0" right="12.0" top="12.0" />
    </padding>
</VBox>
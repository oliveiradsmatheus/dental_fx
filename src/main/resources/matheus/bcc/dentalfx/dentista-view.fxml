<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="matheus.bcc.dentalfx.AgendamentoController">
    <children>
        <MenuBar nodeOrientation="RIGHT_TO_LEFT">
            <menus>
                <Menu mnemonicParsing="false" text="Ajuda">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onSobre" text="Sobre" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Tema">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onTrocarTema" text="Trocar Tema" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Cadastros">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onPaciente" text="Paciente" />
                        <MenuItem mnemonicParsing="false" onAction="#onDentista" text="Dentista" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#onMaterial" text="Material" />
                        <MenuItem mnemonicParsing="false" onAction="#onProcedimento" text="Procedimento" />
                    </items>
                </Menu>
            </menus>
            <VBox.margin>
                <Insets left="10.0" right="10.0" />
            </VBox.margin>
        </MenuBar>
        <HBox VBox.vgrow="ALWAYS">
            <children>
                <VBox alignment="CENTER" minWidth="150.0" prefWidth="220.0" spacing="10.0">
                    <children>
                        <Label text="Data da Consulta" />
                        <DatePicker fx:id="dp_dia_consulta" onAction="#onTrocouData" prefWidth="180.0" showWeekNumbers="true" />
                        <Label layoutX="65.0" layoutY="107.0" text="Dentista">
                            <VBox.margin>
                                <Insets top="40.0" />
                            </VBox.margin>
                        </Label>
                        <ComboBox fx:id="cb_dentista" onAction="#onTrocouDentista" prefWidth="180.0" />
                    </children>
                    <HBox.margin>
                        <Insets bottom="12.0" left="12.0" top="12.0" />
                    </HBox.margin>
                </VBox>
                <VBox HBox.hgrow="ALWAYS">
                    <children>
                        <TableView fx:id="table_view" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="col_hora" maxWidth="75.0" prefWidth="75.0" text="HORA" />
                                <TableColumn fx:id="col_paciente" prefWidth="75.0" text="PACIENTE" />
                            </columns>
                            <VBox.margin>
                                <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
                            </VBox.margin>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                        <HBox alignment="CENTER" prefHeight="60.0" prefWidth="550.0" spacing="50.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#onAgendar" text="Agendar">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Button>
                                <Button layoutX="241.0" layoutY="42.0" mnemonicParsing="false" onAction="#onCancelarAgendamento" text="Cancelar Agendamento">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Button>
                            </children>
                            <VBox.margin>
                                <Insets bottom="12.0" left="12.0" right="12.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </children>
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="60.0" left="60.0" right="60.0" top="60.0" />
    </padding>
</VBox>
